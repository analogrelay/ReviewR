@using IValidator = System.Web.WebPages.IValidator;
@functions {
    public static ValidationHelper Validation {
        get {
            WebPage page = CurrentPage as WebPage;
            return page == null ? null : page.Validation;
        }
    }
}

@* Templated Helpers (infrastructure for the real controls below) *@
@helper Control(string title, string name, bool validation, Func<object, HelperResult> template) {
    string binding = validation ? " data-bind=\"css: { error: !" + name + ".isValid() }\"" : String.Empty;
    <li class="control-group"@Html.Raw(binding)>
        <label class="control-label" for="@name">@title</label>
        <div class="controls">
            @template(null)
            @if(validation) {
                <p class="help-block" data-bind="ifnot: @(name).isValid, text: @(name).errorMessage"></p>
            }
        </div>
    </li>
}

@helper Input(string title, string name, string type, bool validation) {
    @Input(title, name, type, "value", validation)
}

@helper Input(string title, string name, string type, string valueBinding, bool validation) {
    @Control(title, name, validation, @<input type="@type" name="@name" data-bind="@valueBinding: @name" />)
}

@* Actual Controls *@

@helper Textarea(string title, string name, bool validation = true) {
    @Control(title, name, validation, @<textarea name="@name" data-bind="value: @name"></textarea>)
}
@helper Text(string title, string name, bool validation = true) { @Input(title, name, "text", validation) }
@helper Email(string title, string name, bool validation = true) { @Input(title, name, "email", validation) }
@helper Password(string title, string name, bool validation = true) { @Input(title, name, "password", validation) }
@helper Checkbox(string title, string name, bool validation = true) { @Input(title, name, "checkbox", "checked", validation) }
@helper File(string title, string name) {
    // File upload is tricky, it requires some additional work. In this helper we just render the input tag with NO binding
    @Control(title, name, false, @<input type="file" name="@name" />)
}