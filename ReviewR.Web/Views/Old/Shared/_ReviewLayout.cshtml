@model ReviewR.Web.ViewModels.IReviewLayoutViewModel
@{
    Layout = "_Layout.cshtml";
    var review = Model.Review;
}

<header>
    <h1 class="inline">@review.Name</h1>
    <p class="review-actions">
        @if (review.IsAuthor)
        {
            <a href="@Url.Action("Edit", "Reviews", new { id = review.Id })" class="btn btn-primary">
                <i class="icon-edit icon-white"></i>
                Edit
            </a>
            <a href="@Url.Action("Delete", "Reviews", new { id = review.Id })" title="Delete" class="btn btn-danger attach" data-confirm="Are you sure you want to delete this review? (Cannot be undone)" data-method="post">
                <i class="icon-trash icon-white"></i>
                Delete
            </a>
        }
    </p>
</header>
<div class="row-fluid">
    @Html.Partial("_FileList", review)
    <div class="span8">
        @RenderBody()
    </div>
</div>
